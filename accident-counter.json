{
  "$id": "https://raw.githubusercontent.com/peksi/data-syntax-accident-counter/main/accident-counter.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Accident counter data syntax for Valotalive",
  "type": "object",
  "properties": {
    "currentValue": {
      "type": "number"
    },
    "currentDestination": {
      "type": "string"
    },
    "accidentFreeDaysText": {
      "type": "string"
    },
    "companyLogo": {
      "type": "string"
    },
    "holidays": {
      "type": "array",
      "items": {
        "startDate": "string",
        "endDate": "string",
        "required": ["startDate", "endDate"]
      }
    },
    "accidents": {
      "type": "array",
      "items": {
        "accidentDate": "string",
        "required": ["accidentDate"]
      }
    }
  },
  "required": [
    "currentValue",
    "currentDestination",
    "accidentFreeDaysText",
    "companyLogo",
    "accidents",
    "holidays"
  ]
}
